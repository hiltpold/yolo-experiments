FROM  pytorch/pytorch:latest

WORKDIR /usr/src/app/

# install tools
RUN apt-get update \
	&& apt-get -y install --no-install-recommends \
	git \
	zip \
	htop \
	screen \
	libgl1-mesa-glx \
	libglib2.0-0 \
	&& rm -rf /var/lib/apt/lists/*

# get the yolo code
RUN git clone https://github.com/WongKinYiu/yolov7.git .

# install yolo
RUN pip install -r requirements.txt


